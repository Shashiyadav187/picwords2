{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "preserveConstEnums": true,
    "allowJs": true,
    "removeComments": false
  },
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ],
  "types": [
    "core-js"
  ]
}