{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "preserveConstEnums": true,
    "allowJs": true,
    "removeComments": false
  },
  "exclude": [
    "node_modules",
    "server/node_modules",
    "typings"
  ],
  "files": [
    "./server/app.ts",
    "./server/config.ts",
    "./server/server.ts",
    "./public/app/main.ts",
    "./public/app/app.module.ts",
    "./public/app/app.component.ts"
  ],
  "typeRoots": [
    "."
  ],
  "types": [
    "typings"
  ]
}